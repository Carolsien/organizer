<p id="notice"><%= notice %></p>

<h1>Obsluga</h1>

<table class="table">
  <thead>
    <tr>
      <th>Kto</th>
      <th>Nazwa</th>
      <th>Kontakt</th>
      <th colspan="3">Opcje</th>
    </tr>
  </thead>

  <tbody>
    <% @wedding_services.each do |wedding_service| %>
      <tr>
        <td><%= wedding_service.who %></td>
        <td><%= wedding_service.name %></td>
        <td><%= wedding_service.contact %></td>
        <td><%= link_to 'Pokaż', wedding_service %></td>
        <td><%= link_to 'Edytuj', edit_wedding_service_path(wedding_service) %></td>
        <td><%= link_to 'Usuń', wedding_service, method: :delete, data: { confirm: 'Jesteś pewny/a' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

