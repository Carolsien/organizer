        <td><%= link_to 'Edytuj', edit_bride_dress_path(bride_dress) %></td>
        <td><%= link_to 'Usuń', bride_dress, method: :delete, data: { confirm: 'Czy na pewno usunąć??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
