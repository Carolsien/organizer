<h3><i><b>Suknia ślubna</i></b></h3>

<table class="table">
  <thead>
    <tr>
      <th>Model</th>
      <th>Rozmiar</th>
      <th>Przymiarki</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @bride_dresses.each do |bride_dress| %>
      <tr>
        <td><%= bride_dress.model %></td>
