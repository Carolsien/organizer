<h1>Wesele</h1>
<br><br>
<h3><i><b>Sala Weselna</i></b></h3>

<table class="table">
  <thead>
    <tr>
      <th>Nazwa obiektu</th>
      <th>Adres</th>
      <th colspan="3">Opcje</th>
    </tr>
  </thead>

  <tbody>
    <% @wedding_rooms.each do |wedding_room| %>
      <tr>
        <td><%= wedding_room.name %></td>
        <td><%= wedding_room.adress %></td>
        <td><%= link_to 'Pokaż', wedding_room %></td>
        <td><%= link_to 'Edytuj', edit_wedding_room_path(wedding_room) %></td>
        <td><%= link_to 'Usuń', wedding_room, method: :delete, data: { confirm: 'Jesteś pewny/a' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj', new_wedding_room_path %>

