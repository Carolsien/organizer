<h1>Pan Mlody</h1>
<br><br>
<h3><i><b>Garnitur</i></b></h3>

<table class="table">
  <thead>
    <tr>
      <th>Model</th>
      <th>Rozmiar</th>
      <th>Przymiarka</th>
      <th colspan="3">Opcje</th>
    </tr>
  </thead>

  <tbody>
    <% @groom_suits.each do |groom_suit| %>
      <tr>
        <td><%= groom_suit.model %></td>
        <td><%= groom_suit.size %></td>
        <td><%= groom_suit.fitting %></td>
        <td><%= link_to 'Pokaz', groom_suit %></td>
        <td><%= link_to 'Edytuj', edit_groom_suit_path(groom_suit) %></td>
        <td><%= link_to 'Usun', groom_suit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj', new_groom_suit_path %>

<br><br>
<h3><i><b>Akcesoria</i></b></h3>
<table class="table">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Kolor</th>
      <th>Rozmiar/Ilosc</th>
      <th colspan="3">Opcje</th>
    </tr>
  </thead>

  <tbody>
    <% @groom_accessories.each do |groom_accessory| %>
      <tr>
        <td><%= groom_accessory.name %></td>
        <td><%= groom_accessory.colour %></td>
        <td><%= groom_accessory.amount %></td>
        <td><%= link_to 'Pokaz', groom_accessory %></td>
        <td><%= link_to 'Edytuj', edit_groom_accessory_path(groom_accessory) %></td>
        <td><%= link_to 'Usun', groom_accessory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowe akcesoria', new_groom_accessory_path %>
