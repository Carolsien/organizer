<p id="notice"><%= notice %></p>

<h1>Bride Dresses</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Size</th>
      <th>Fitting</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bride_dresses.each do |bride_dress| %>
      <tr>
        <td><%= bride_dress.model %></td>
        <td><%= bride_dress.size %></td>
        <td><%= bride_dress.fitting %></td>
        <td><%= bride_dress.user %></td>
        <td><%= link_to 'Show', bride_dress %></td>
        <td><%= link_to 'Edit', edit_bride_dress_path(bride_dress) %></td>
        <td><%= link_to 'Destroy', bride_dress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

