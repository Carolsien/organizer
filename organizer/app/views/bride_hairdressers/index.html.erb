        <td><%= link_to 'Show', bride_hairdresser %></td>
        <td><%= link_to 'Edit', edit_bride_hairdresser_path(bride_hairdresser) %></td>
        <td><%= link_to 'Destroy', bride_hairdresser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
