<%= form_for(church_ceremony) do |f| %>
  <% if church_ceremony.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(church_ceremony.errors.count, "error") %> Nie można dodać elementu</h2>

      <ul>
      <% church_ceremony.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Nazwa' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :adress, 'Adres' %>
    <%= f.text_area :adress %>
  </div>

  <div class="field">
    <%= f.label :date, 'Data' %>
    <%= f.datetime_select :date %>
  </div>

  <div class="actions">
    <%= f.submit 'Potwierdz' %>
  </div>
<% end %>
