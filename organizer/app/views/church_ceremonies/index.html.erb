<p id="notice"><%= notice %></p>

<h1>Ceremonia</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Adres</th>
      <th>Data ceremoni</th>
      <th colspan="3">Opcje</th>
    </tr>
  </thead>

  <tbody>
    <% @church_ceremonies.each do |church_ceremony| %>
      <tr>
        <td><%= church_ceremony.name %></td>
        <td><%= church_ceremony.adress %></td>
        <td><%= church_ceremony.date %></td>
        <td><%= link_to 'Pokaż', church_ceremony %></td>
        <td><%= link_to 'Edytuj', edit_church_ceremony_path(church_ceremony) %></td>
        <td><%= link_to 'Usuń', church_ceremony, method: :delete, data: { confirm: 'Jesteś pewny/a' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj', new_church_ceremony_path %>
