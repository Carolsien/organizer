<p id="notice"><%= notice %></p>

<h1>Dekoracje</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Kolor</th>
      <th>Ilosc</th>
      <th colspan="3">Opcje</th>
    </tr>
  </thead>

  <tbody>
    <% @church_decorations.each do |church_decoration| %>
      <tr>
        <td><%= church_decoration.name %></td>
        <td><%= church_decoration.colour %></td>
        <td><%= church_decoration.amount %></td>
        <td><%= link_to 'Pokaz', church_decoration %></td>
        <td><%= link_to 'Edytuj', edit_church_decoration_path(church_decoration) %></td>
        <td><%= link_to 'Usun', church_decoration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowa dekoracja', new_church_decoration_path %>
