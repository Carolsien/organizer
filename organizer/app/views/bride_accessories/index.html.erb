<p id="notice"><%= notice %></p>

<h1>Bride Accessories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Size</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bride_accessories.each do |bride_accessory| %>
      <tr>
        <td><%= bride_accessory.name %></td>
        <td><%= bride_accessory.color %></td>
        <td><%= bride_accessory.size %></td>
        <td><%= bride_accessory.user %></td>
        <td><%= link_to 'Show', bride_accessory %></td>
        <td><%= link_to 'Edit', edit_bride_accessory_path(bride_accessory) %></td>
        <td><%= link_to 'Destroy', bride_accessory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

